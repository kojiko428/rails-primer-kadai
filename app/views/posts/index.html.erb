<!-- asset/posts.scssと連携 -->
<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="./stylesheets/posts.scss">
    <link rel="stylesheet" href="./stylesheets/normalize.css">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>Chatter</title>
  </head>

  <body>
    <header class="header">
    <!-- HTMLでの記載の場合/images/は不要 -->
    <img src="/assets/logo.jpg"  alt="" class="logo_image">
    <nav>
     <ul class="top_menu clearfix">
     <li><a href="http://localhost:3000/posts/new">新しく投稿する</a></li>
    </nav>
    </header>

    <aside class="side_menu">
      <h2>投稿一覧</h2>
      <p><%= notice %></p>
    </aside>

  <article class="content">
    <table>
      <tr>
          <th>内容</th>
      </tr>
    <% @posts.each do |post| %>
       <tr>
       <td><%= post.content %></td>
       <td><%= link_to '確認', post_path(post.id) %></td>
       <td><%= link_to '編集', edit_post_path(post.id), data: { confirm: '本当に編集していいですか？' } %></td>
       <td><%= link_to '削除', post_path(post.id), method: :delete  ,data: { confirm: '本当に削除していいですか？' } %></td>
       </tr>
    <% end %>
    </table>
    <!-- <%= link_to '新しい投稿をする', new_post_path %> -->
    </article>


    <footer class="footer">
     <p>Copyright © 2021 Chatter INC All RIGHTS RESERVED.</p>
    </footer>
  </body>


</html>
