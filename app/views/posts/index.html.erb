<h1>投稿一覧</h1>
<table>
  <tr>
      <th>内容</th>
  </tr>
<!-- <%=で表示される -->
<% @posts.each do |post| %>
   <tr>
   <td><%= post.content %></td>
   <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
   </tr>
<% end %>
</table>

